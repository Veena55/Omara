{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "**/*.ts" // This includes TypeScript files anywhere in the project
    ],
    "exclude": [
        "node_modules"
    ]
}
